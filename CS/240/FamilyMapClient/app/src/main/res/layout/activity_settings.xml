<RelativeLayout
    android:id="@+id/settingActivity"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SettingsActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Life Stroy Lines"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="SHOW LIFE STORY LINES"
            android:layout_marginStart="10dp"
            android:textSize="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Family Tree Lines"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="SHOW FAMILY TREE LINES"
            android:layout_marginStart="10dp"
            android:textSize="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Spouse Lines"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="SHOW SPOUSE LINES"
            android:layout_marginStart="10dp"
            android:textSize="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Father's Side"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="FILTER BY FATHER'S SIDE OF FAMILY"
            android:layout_marginStart="10dp"
            android:textSize="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Mother's Side"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="FILTER BY MOTHER'S SIDE OF FAMILY"
            android:layout_marginStart="10dp"
            android:textSize="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Male Events"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="FILTER EVENTS BASED ON GENDER"
            android:layout_marginStart="10dp"
            android:textSize="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Female Events"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="FILTER EVENTS BASED ON GENDER"
            android:layout_marginStart="10dp"
            android:textSize="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/LOGOUT"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Logout"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/RETURN"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="RETURN TO LOGIN SCREEN"
            android:layout_marginStart="10dp"
            android:textSize="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <Switch
        android:id="@+id/LSL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
    </Switch>
    <Switch
        android:id="@+id/FTL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">
    </Switch>
    <Switch
        android:id="@+id/SL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
    </Switch>
    <Switch
        android:id="@+id/FS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">
    </Switch>
    <Switch
        android:id="@+id/MS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp">
    </Switch>
    <Switch
        android:id="@+id/ME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="245dp">
    </Switch>
    <Switch
        android:id="@+id/FE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp">
    </Switch>

</RelativeLayout>